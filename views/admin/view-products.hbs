<section>
    <div class="container">
        <div class="row mt-4">
                 <a href="/admin/add-products" class="btn btn-success ml-auto">Add products</a>
        </div>
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">NO</th>
                    <th scope="col">Name</th>
                    <th scope="col">Rate</th>
                    <th scope="col">Desccription</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">{{this.name}}</th>
                    <td><img style="width:50px;height:50px " src="{{this.image}}" alt=""></td>
                    <td>{{this.price}}</td>
                    <td>{{this.descrition}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>